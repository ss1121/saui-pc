body
  font-size: $size

.flex-1
  flex: 1

.oh
  overflow hidden

.ss-center
  text-align: center
.ss-left
  text-align: left
.ss-right
  text-align: right

.ss-sizing-border
  box-sizing: border-box

.ss-zindex-m
  position: relative
  z-index: -9999!important
.none
  display none
  @extends .ss-zindex-m
.disN
  display none!important
  @extends .ss-zindex-m

.ss-block
  display block
.ss-i-block
  display: inline-block

//默认icon与文字之间的距离
.ss-icon-right
  margin-right: $icon-dist
.ss-icon-left
  margin-left: $icon-dist


.ss-hover-underline
  &:hover
    text-decoration: underline

//文字链接
[class*='link']
  cursor: pointer
  &:hover
    color: $color-aux-fail
[class*='link-primary']
  cursor: pointer
  &:hover
    color: $color-primary

.ss-relative
  position: relative
