/*
  tipsCfg, tipsArrowCfg是给方法提供的基本配制，cfg = merge({},基础配制，传入的新的配制) 可以得到最终的样式 ====>>第一个参数为{}是因为merge后 基础配制 == cfg
  注意： bg, bc 都是由 icon color 演变而来的
*/
//提示框
tipsCfg = {
  $isShow: false
  $icon: 'normal'                    //icon是都否存在 存在时分两种情况，一，normal是提示框的定死的，用于表单验证，系统提示，二自定义
  $padding: $tips-padding-sm
  $size: $tips-size-sm
  $color: $tips-color
  $isNowrap: true                   //true:强制不换行, false: 固定宽度，超过换行
  $max-width: 480px
  $spc: false                     //是否特殊，为true时白色背景，灰色边框，且没有icon，false时，背景与边框由iconColor演变 true时，下面的参数都无效

  $icon-color: $tips-icon-color
  $isFlex: true
  $icon-size: $tips-icon-size-sm
  $mg: $tips-mg-sm
}
//带箭头的提示框
tipsArrowCfg = {
  $icon: false                    //icon是都否存在 存在时分两种情况，一，normal是提示框的定死的，用于表单验证，系统提示，二自定义
  $padding: $tips-padding-sm
  $size: $tips-size-sm
  $color: $tips-color
  $isNowrap: true                   //true:强制不换行, false: 固定宽度，超过换行
  $max-width: 480px
  $spc: true                     //是否特殊，白色背景，灰色边框，false时，背景与边框由iconColor演变

  //arrow
  $direction: top
  $arrowBc: $tipsx-bc
  $arrowBg: $tipsx-bg
}

//纯粹
ss-tips($class = '.ss-tips', $config = false)
  cfg = merge({}, tipsCfg, $config)
  {$class}
    border: 1px solid
    font-size: cfg.$size
    padding: cfg.$padding
    if (cfg.$isNowrap == true)
      white-space: nowrap;
    else 
      width: cfg.$max-width     //固定宽度，超过换行
      white-space: normal
      text-align: left
      
    if (cfg.$spc == true )       
      background-color: $tipsx-bg
      border-color: $tipsx-bc
      color: $color-text-regular
    else 
      border-color: lighten(cfg.$icon-color, 70%)
      background-color: lighten(cfg.$icon-color, 90%)
      color: cfg.$color
      if (cfg.$icon == 'normal')     //写死提示框的三种状态
        ss-icon($tips-icon, cfg.$icon-size, $tips-icon-color, cfg.$mg, $isFlex: cfg.$isFlex, $space: cfg.$mg)
        &.error
          background-color: lighten($tips-icon-fail-color, 90%)
          border-color: lighten($tips-icon-fail-color, 70%)
          if (cfg.$isFlex == true && !cfg.$isShow)
            display: flex
          else 
            display: block
          &:before
            content: $tips-icon-fail
            color: $tips-icon-fail-color
        &.warning
          background-color: lighten($tips-icon-color, 90%)
          border-color: lighten($tips-icon-color, 70%)
          if (cfg.$isFlex == true && !cfg.$isShow)
            display: flex
          else 
            display: block
          &:before
            content: $tips-icon
            color: $tips-icon-color
        &.success
          background-color: lighten($tips-icon-sucess-color, 90%)
          border-color: lighten($tips-icon-sucess-color, 70%)
          if (cfg.$isFlex == true && !cfg.$isShow)
            display: flex
          else 
            display: block
          &:before
            content: $tips-icon-sucess
            color: $tips-icon-sucess-color
      else if (cfg.$icon != false)
        ss-icon(cfg.$icon, cfg.$icon-size, cfg.$icon-color, cfg.$mg, $isFlex: cfg.$isFlex, $space: cfg.$mg)
      display: none if (!cfg.$isShow)
  // else 
  //   background-color: lighten($color, 90%)
  //   border: 1px solid lighten($color, 70%)

//系统提示，提示语垂直居中
ss-tips-system($config = false)
  cfg = merge({}, tipsCfg, $config)
  .tips-container
    z-index: $zidx-h;
    position: fixed;
    left: 50%
    top: 50%
    transform: translate(-50%, -50%);
    ss-tips('.tips-item', cfg)
    .tips-item
      font-weight: bold
      &:before
        font-weight: normal


ss-tips-form($class= '.form-tips', $config = false)
  cfg = merge({}, tipsCfg, $config)
  {$class}
    position relative 
    ss-tips('.ss-form-tips', cfg)
    .ss-form-tips
      {tips-form}
      line-height: initial
      z-index: $zidx-ft


//箭头的方向
ss-arrow-direction($direction = top, $tips-arrow-size-sm, $tipsx-bc-2, $tipsx-bg-2, $top = calc(100%))
  &:before
    content: ''
    position: absolute
    top: $top
    left: 45%
    z-index: $zidx-h + 1
    ss-triangle-hollow($direction, $tips-arrow-size-sm, $tipsx-bc-2, $tipsx-bg-2)
//没有icon，但是有箭头  白色背景，灰色边框
ss-tips-arrow($class = 'ss-tips-arrow', $config = false)
  cfg = merge({}, tipsArrowCfg, $config)      //合并基础参数与新的参数
  {$class}
    display: inline-block
    position: relative
    ss-arrow-direction(cfg.$direction, cfg.$size, cfg.$arrowBc, cfg.$arrowBg)
    ss-tips('.item-tips', cfg)
    .item-tips
      position: absolute
      left: 0
      top: "calc(100% + %s)" % (cfg.$size / 2)
      box-shadow: $box-shadow-tips
      z-index: $zidx-h
      display: none
    &:before
      display: none
    &:hover, &.active
      .item-tips
        display: block
      &:before
        display: block