rootHeadCfg = {
  // $bgimage: '/images/saui-logo.png'
  $bgimage: false
  $HeaderHeight: 60px
  $HeaderBg: #fff
  $HeadColor: #333
  $HeadSize: 12px
  $mWidth: 260px
  //缩小版
  $mWidth-2: 70px
  $lh: 50px
}

admin = {
  $routerBg: #fff
  $box-line: 1px solid $color-line
}

adminMenus = {
  $logoColor: $color-text-regular
  $mBg: #fff
  $mColor: #666
  $mWidth: 260px
  $mActiveBg: #fff
  $mActiveItemBg: #e6f7ff //fade-out($color-primary, .9)
  $mActiveColor: $color-primary
  $mUlBg: #fff
  $lh: 40px
  $lh-title: 44px
  $type: 'activeline'
  $typeClass: '.level1'
  $isShowIcon: false
  $isAllShow: true
