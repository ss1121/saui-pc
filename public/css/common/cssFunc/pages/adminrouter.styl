ss-root-header($class= '.root-header', $config = false)
  cfg = merge({}, rootHeadCfg, $config)
  {$class}
    background: cfg.$HeaderBg
    box-shadow: $box-shadow
    color: cfg.$HeadColor
    font-size: cfg.$HeadSize
    height: cfg.$HeaderHeight
    position: relative
    transition: 250ms ease;
    .admin-header
      @extends $flex-nowrap-between-center
      &.active
        .item-logo
          width: cfg.$mWidth-2
        .item-logo-title
          display: none
    //logo
    .item-logo
      width: cfg.$mWidth
      height: cfg.$HeaderHeight
      if (cfg.$bgimage)
        background-image: url(cfg.$bgimage)
        background-repeat: no-repeat
        background-position: center center
        background-size: contain
        .item-logo-title
          display: none
      else 
        @extends $flex-nowrap-center-center
        .item-logo-title
          margin-left: 16px
          font-size: 36px
          color: cfg.$HeadColor
          font-family: monospace
      
    .admin-content
      padding: 0 $space
      flex: 1
      @extends $flex-nowrap-between-center
    .admin-right
      @extends $flex-nowrap
      margin-left: auto
    .icon-select
      margin-left: 36px
